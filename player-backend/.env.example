# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/wbc2026
DATABASE_POOL_SIZE=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_ACCESS_SECRET=your-access-secret-min-32-characters-long-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=your-refresh-secret-min-32-characters-long-here
JWT_REFRESH_EXPIRY=7d

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/google/callback

# OAuth - Facebook
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/facebook/callback

# OAuth - Apple
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Email (SendGrid)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
EMAIL_FROM=noreply@wbc2026.com
EMAIL_FROM_NAME=WBC 2026

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Storage (S3)
S3_ENDPOINT=
S3_BUCKET=wbc2026-assets
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1
S3_CDN_URL=https://cdn.example.com
S3_FORCE_PATH_STYLE=false
S3_SIGNED_URL_EXPIRY=3600

# Local Storage (development fallback)
STORAGE_LOCAL=false
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=/uploads

# Placeholder image for missing assets
PLACEHOLDER_IMAGE_URL=/placeholder.svg

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key!

# Frontend URL (for CORS, emails)
FRONTEND_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Pay247 Payment Gateway
PAY247_MERCHANT_ID=
PAY247_SECRET_KEY=
PAY247_API_URL=https://api.pay247.io
PAY247_WEBHOOK_SECRET=
PAY247_ENVIRONMENT=sandbox
PAY247_DEPOSIT_WEBHOOK_URL=http://localhost:4000/api/payment/pay247/webhook/deposit
PAY247_WITHDRAWAL_WEBHOOK_URL=http://localhost:4000/api/payment/pay247/webhook/withdrawal
PAY247_WEBHOOK_IPS=  # Comma-separated list of allowed IP addresses (optional)
